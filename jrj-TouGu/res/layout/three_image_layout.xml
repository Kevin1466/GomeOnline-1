<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lo_selected_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:layout_weight="0"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/lo_select_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/selected_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_10" />

            <ImageView
                android:id="@+id/image_del_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/space_5"
                android:src="@drawable/icon_image_delete"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lo_select_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/selected_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_10" />

            <ImageView
                android:id="@+id/image_del_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/space_5"
                android:src="@drawable/icon_image_delete"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lo_select_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/selected_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_10" />

            <ImageView
                android:id="@+id/image_del_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/space_5"
                android:src="@drawable/icon_image_delete"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>