<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.gome.haoyuangong.views.MyViewPageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >
        </com.gome.haoyuangong.views.MyViewPageIndicator>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/list_divider_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lo_new_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/new_msg_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#550000ff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/new_msg_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/space_5"
                android:text="有3调新消息 点击查看"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>