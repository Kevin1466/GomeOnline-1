<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_whole"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_45"
    android:background="@color/action_bar_bg"
    android:paddingRight="@dimen/space_13" >

    <LinearLayout
        style="@style/BaseLayout"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/title_left1_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_13"
            android:paddingRight="@dimen/space_13"
             >

            <com.gome.haoyuangong.views.ClickTextView
                android:id="@+id/title_left1"
                style="@style/BaseTextView.title"
                android:background="@drawable/title_back"
                android:textColor="@drawable/title_text_color"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>

        <com.gome.haoyuangong.views.ClickTextView
            android:id="@+id/title_left2"
            style="@style/BaseTextView.title"
            android:textColor="@drawable/title_text_color"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_center"
            style="@style/BaseTextView.title" />

        <TextView
            android:id="@+id/title_center2"
            style="@style/BaseTextView.title"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        style="@style/BaseLayout"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" >

        <com.gome.haoyuangong.views.ClickTextView
            android:id="@+id/title_right1"
            style="@style/BaseTextView.title"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="@drawable/title_text_color"
            android:textSize="@dimen/text_size_17" />

        <com.gome.haoyuangong.views.ClickTextView
            android:id="@+id/title_right2"
            style="@style/BaseTextView.title"
            android:gravity="center_vertical"
            android:textColor="@drawable/title_text_color"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</RelativeLayout>