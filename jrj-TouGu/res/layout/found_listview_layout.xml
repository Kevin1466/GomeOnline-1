<?xml version="1.0" encoding="utf-8"?>
<com.gome.haoyuangong.views.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:id="@+id/ScrollViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="13.4dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/find_point_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/find_point" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="投顾说"
                        android:textColor="#595959"
                        android:textSize="14.7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3345"
                            android:textColor="#727272"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="人互动"
                            android:textColor="#727272"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/find_live_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/find_live" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="直播室"
                        android:textColor="#595959"
                        android:textSize="14.7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3345"
                            android:textColor="#727272"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="人在线"
                            android:textColor="#727272"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/find_people_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/find_people" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="找投顾"
                        android:textColor="#595959"
                        android:textSize="14.7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3345"
                            android:textColor="#727272"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="个投顾"
                            android:textColor="#727272"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/find_talk_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/find_talk" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="问投顾"
                        android:textColor="#595959"
                        android:textSize="14.7sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3345"
                            android:textColor="#727272"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="个问答"
                            android:textColor="#727272"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="13.4dip"
                android:background="@color/background_f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_marginRight="13.4dip" >

                <TextView
                    android:layout_width="4dip"
                    android:layout_height="32dip"
                    android:layout_marginTop="4dip"
                    android:background="#f75455" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="热门观点"
                    android:textColor="#595959"
                    android:textSize="16.7sp" />

                <ImageView
                    android:id="@+id/more1"
                    android:layout_width="13.34dip"
                    android:layout_height="16.67dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="11dip"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/point_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@id/more1"
                    android:text="更多"
                    android:textColor="#727272"
                    android:textSize="13.4sp" />
            </RelativeLayout>

            <!--
             <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/divider_2" />
            -->

            <com.gome.haoyuangong.views.MyListView
                android:id="@+id/found_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@color/list_divider_color"
                android:dividerHeight="@dimen/divider_1"
                android:listSelector="@drawable/list_item_drawable_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_13"
                android:background="@color/background_f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_marginBottom="13.4dip"
                android:layout_marginRight="13.4dip" >

                <TextView
                    android:layout_width="4dip"
                    android:layout_height="32dip"
                    android:layout_marginTop="4dip"
                    android:background="#ffad00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="推荐投顾"
                    android:textColor="#595959"
                    android:textSize="16.7sp" />

                <ImageView
                    android:id="@+id/more2"
                    android:layout_width="13.34dip"
                    android:layout_height="16.67dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="11dip"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/recommend_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@id/more2"
                    android:text="更多"
                    android:textColor="#727272"
                    android:textSize="13.4sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="128.67dip"
                android:orientation="vertical" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPages"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/groupView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="11dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_13"
                android:background="@color/background_f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_marginRight="13.4dip" >

                <TextView
                    android:layout_width="4dip"
                    android:layout_height="32dip"
                    android:layout_marginTop="4dip"
                    android:background="#5a6afe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:text="有问必答"
                    android:textColor="#595959"
                    android:textSize="16.7sp" />

                <ImageView
                    android:id="@+id/more3"
                    android:layout_width="13.34dip"
                    android:layout_height="16.67dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="11dip"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/answer_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_toLeftOf="@id/more3"
                    android:text="更多"
                    android:textColor="#727272"
                    android:textSize="13.4sp" />
            </RelativeLayout>

            <!--
             <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/divider_2" />
            -->


            <!--
             <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/divider_2" />
            -->

            <com.gome.haoyuangong.views.MyListView
                android:id="@+id/found_listview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="@color/list_divider_color"
                android:dividerHeight="@dimen/divider_1"
                android:listSelector="@drawable/list_item_drawable_bg" />
        </LinearLayout>
    </ScrollView>

</com.gome.haoyuangong.views.SwipeRefreshLayout>