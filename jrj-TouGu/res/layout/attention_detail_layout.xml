<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.gome.haoyuangong.views.xlistview.XListView
        android:id="@+id/listView"
        style="@style/BaseListView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/space_13"
        android:listSelector="@drawable/list_item_drawable_bg" >
    </com.gome.haoyuangong.views.xlistview.XListView>

    <View
        android:id="@+id/view1_d"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/half_transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_f0f0f0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/space_10" >

            <TextView
                android:id="@+id/tv_reply"
                style="@style/BaseTextView.Clickable"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_round_corner_white_stroke"
                android:ems="10"
                android:enabled="true"
                android:gravity="left"
                android:padding="@dimen/space_6"
                android:text="说点什么…"
                android:textColor="#cccccc"
                android:textColorHint="@color/font_b2b2b2" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/share_lo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_13"
                    android:src="@drawable/icon_share_big"
                    android:visibility="gone" />

                <View
                    android:layout_width="@dimen/divider_1"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_13"
                    android:drawableLeft="@drawable/selector_zan"
                    android:drawablePadding="@dimen/space_7"
                    android:gravity="center"
                    android:textColor="@color/font_999999" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>