<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/igid_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:visibility="gone" >

        <TextView
            android:id="@+id/igid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:text="品种一"
            android:textColor="@color/font_595959"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/igid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/igid_name"
            android:layout_below="@+id/igid_name"
            android:layout_marginTop="7dp"
            android:text="更新：2014-10-20    创建：2014-09-09"
            android:textColor="@color/font_b2b2b2"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/headpic"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:src="@drawable/right_arrow" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider_2"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/divider_2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/divider_2" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/nametext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="近一月收益"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="25%"
                                    android:textColor="@color/font_32a632"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/textViewContent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="交易成功率"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="75%"
                                    android:textColor="@color/font_de3031"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/againAnswerView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="交易频率"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:text="5(W)"
                                    android:textColor="@color/font_de3031"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/divider_2" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/infotext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收益水平(中)"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="48dp"
                                    android:layout_height="24dp"
                                    android:layout_marginTop="7dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/icon_invest_m" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="风险水平(中)"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="48dp"
                                    android:layout_height="24dp"
                                    android:layout_marginTop="7dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/icon_invest_m" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:tag="@color/white" >

                                <TextView
                                    android:id="@+id/lastedAnswerText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="波动水平(低)"
                                    android:textColor="@color/font_727272"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="48dp"
                                    android:layout_height="24dp"
                                    android:layout_marginTop="7dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/icon_invest_l" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.gome.haoyuangong.views.MyViewPageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_fafafa"
            android:minHeight="@dimen/space_40" >
        </com.gome.haoyuangong.views.MyViewPageIndicator>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>