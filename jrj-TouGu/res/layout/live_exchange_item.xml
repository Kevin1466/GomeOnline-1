<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout.Clickable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_8" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/space_33"
                    android:layout_height="@dimen/space_33"
                    android:src="@drawable/icon_head_default" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_7" >

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李家志"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:id="@+id/a_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="投资顾问"
                            android:textColor="@color/font_b2b2b2"
                            android:textSize="@dimen/text_size_12" />

                    </LinearLayout>

                    <com.gome.haoyuangong.views.ClickTextView
                        android:id="@+id/reply_tv"
                        style="@style/BaseTextView.title"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="top|right"
                        android:background="@drawable/icon_live_comment"
                        android:textSize="0sp" />

                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/exchange_content_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:drawablePadding="@dimen/space_7"
                    android:text="会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金"
                    android:textColor="@color/font_595959"
                    android:textSize="@dimen/text_size_15" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lo_wraper_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:background="@drawable/shape_round_corner"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_7"
                android:paddingRight="@dimen/space_7"
                android:paddingTop="@dimen/space_10" >

                <TextView
                    android:id="@+id/exchange_content_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_7"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="张昭问：明天买什么古柏哦哦赚钱，放松点击发送的第三方斯蒂芬三大普及率"
                    android:textColor="@color/font_727272"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/divider_2" />

</LinearLayout>
