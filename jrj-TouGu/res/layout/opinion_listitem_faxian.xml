<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout.Clickable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_8" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/space_33"
                    android:layout_height="@dimen/space_33"
                    android:src="@drawable/ic_launcher" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_7" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李家志"
                            android:textColor="@color/font_4c86c6"
                            android:textSize="@dimen/space_13" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp" />

                        <RatingBar
                            android:id="@+id/ratingBar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:minHeight="27dp"
                            android:numStars="3"
                            android:progressDrawable="@drawable/icon_meassage_nor"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true" >

                        <TextView
                            android:id="@+id/igid_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资顾问"
                            android:textColor="@color/font_b2b2b2"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/textViewContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="中信证券"
                            android:textColor="@color/font_b2b2b2"
                            android:textSize="@dimen/space_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="24分钟前"
                        android:textColor="@color/font_b2b2b2"
                        android:textSize="@dimen/text_size_12" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/lastedAnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:drawablePadding="@dimen/space_7"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金"
                    android:textColor="@color/font_595959"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginLeft="@dimen/space_40"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="买对股票只完成投资过程的一半或更少，接下来就是跟踪股票，并在股价大幅上涨之后卖掉股票，所以如何卖股票同样至关重要。俗话说：会买是银，..."
                    android:textColor="@color/font_727272"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/headpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/opinion_mi" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:layout_above="@id/bottom_layout"
            android:layout_marginLeft="@dimen/space_13"
            android:layout_marginRight="@dimen/space_13"
            android:background="@color/list_divider_color" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/share_lo"
                style="@style/BaseLayout.Clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_13"
                android:paddingTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_share"
                    android:drawablePadding="@dimen/space_7"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="@color/font_999999" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/divider_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginTop="@dimen/space_3"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:id="@+id/comment_lo"
                style="@style/BaseLayout.Clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_13"
                android:paddingTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_comment"
                    android:drawablePadding="@dimen/space_7"
                    android:gravity="center"
                    android:text="1022"
                    android:textColor="@color/font_999999" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/divider_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginTop="@dimen/space_3"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:id="@+id/zan_lo"
                style="@style/BaseLayout.Clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_13"
                android:paddingTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_zan"
                    android:drawablePadding="@dimen/space_7"
                    android:gravity="center"
                    android:text="2300"
                    android:textColor="@color/font_999999" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/divider_2" />

</LinearLayout>
