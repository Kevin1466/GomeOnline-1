<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="13dip"
    android:paddingBottom="13dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageH"
        android:layout_width="56.67dip"
        android:layout_height="56.67dip"
        android:src="@drawable/ic_launcher" 
        android:layout_marginLeft="10dip"
        android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/foudHotPointsContentTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageH"
            android:layout_marginLeft="8.67dip"
            android:layout_marginRight="10dip"
            android:text="投顾大厅"
            android:maxLines="2"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/foudHotPointsContentTextview"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="13.34dip"
            android:gravity="center">

            <TextView
                android:id="@+id/foudHotPointsNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dip"
                android:gravity="center"
                android:text="周正" 
                android:textColor="#4c87c6"
                android:textSize="13.34sp"/>
            
            <TextView
                android:id="@+id/foudHotPointsPositionTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dip"
                android:layout_marginLeft="7dip"
                android:gravity="center"
                android:text="投资顾问" 
                android:textColor="#727272"
                android:textSize="13.34sp"/>
        </LinearLayout>

</RelativeLayout>