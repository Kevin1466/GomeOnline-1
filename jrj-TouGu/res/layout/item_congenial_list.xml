<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.7dip"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="8.7dip"
        android:layout_marginTop="14dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="67dip"
                android:layout_height="67dip"
                android:src="@drawable/icon111" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="73dip"
                android:layout_alignBottom="@id/user_icon"
                android:layout_marginLeft="@dimen/space_7"
                android:layout_toRightOf="@id/user_icon"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:maxLines="1"
                        android:text="李家志"
                        android:textColor="@color/font_4c86c6"
                        android:textSize="@dimen/space_16" />

                    <ImageView
                        android:id="@+id/add_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/labelTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="首席顾问"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16" />

                    <TextView
                        android:id="@+id/labelTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:maxLines="1"
                        android:text="3年"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/labelTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:maxLines="1"
                        android:text="西南证券"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/labelTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="擅长"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16" />

                    <TextView
                        android:id="@+id/labelTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:maxLines="1"
                        android:text="A股"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16" />

                    <TextView
                        android:id="@+id/labelTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:maxLines="1"
                        android:text="美股"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/labelTextView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:maxLines="1"
                        android:text="军工板块"
                        android:textColor="@color/font_595959"
                        android:textSize="@dimen/space_16"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!--
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_2" 
            android:layout_gravity="center_vertical">
        -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2" 
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/talk_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_icon_talk" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_alignBottom="@id/talk_button"
                android:layout_marginLeft="@dimen/space_7"
                android:layout_toRightOf="@id/talk_button"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loveTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/android_icon_love"
                    android:drawablePadding="2dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/background_727272"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/messageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/android_icon_message"
                    android:drawablePadding="2dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/background_727272"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/peopleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/android_icon_people"
                    android:drawablePadding="2dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/background_727272"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </RelativeLayout>

        <!-- </LinearLayout> -->
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/divider_2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="6.5dip"
        android:background="@color/background_f5f5f5" />

</LinearLayout>