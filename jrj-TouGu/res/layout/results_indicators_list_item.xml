<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/common_list_height"
    android:orientation="vertical" 
    >
    <ImageView android:layout_height="@dimen/results_indicators_icon_height"
        android:layout_width="@dimen/results_indicators_icon_width"
        android:contentDescription="@null"
        android:id="@+id/iv_icon"
        android:layout_marginLeft="13dp"
        android:layout_centerVertical="true"
        />
    <Button android:layout_height="@dimen/results_indictiors_btn_height"
        android:layout_width="@dimen/results_indictiors_btn_width"
        android:layout_marginRight="13dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_main"
        style="@style/style_btn"
        android:id="@+id/btn"
        />
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn"
        >
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_size_describte"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/color_text_gray"
            android:layout_alignParentLeft="true"
            />
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_num"
            android:layout_toRightOf="@id/tv_size_describte"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/color_text_yellow"
            android:layout_alignParentRight="true"
            />
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_compare"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/color_text_gray_9b"
            android:layout_below="@id/tv_size_describte"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

</RelativeLayout>
