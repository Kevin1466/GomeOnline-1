<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_f5f5f5"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_5" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top10_rank"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:background="@color/light_gray"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/top10_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_black_color"
            android:textSize="14dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="@dimen/space_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="持股数(万股)"
            android:textColor="@color/app_text_black_color"
            android:textSize="14dp"  >
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总股本(%)"
            android:textColor="@color/app_text_black_color"
            android:textSize="14dp"  >
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" 持股变动 "
            android:textColor="@color/app_text_black_color"
            android:textSize="14dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="@dimen/space_5">

        <TextView
            android:id="@+id/top10_holder_count"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_lable_text_color" 
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/top_10_rate"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_lable_text_color" 
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/top_10_change"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/app_lable_text_color"
            android:textSize="14dp"  />
    </LinearLayout>

</LinearLayout>