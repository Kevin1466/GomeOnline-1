<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- unpressed -->
    <item android:state_enabled="false" android:color="@color/font_b2b2b2">
        <shape>
             <solid android:color="@color/white"/>
             <corners android:radius="5dp"/>
             <stroke android:width="1dp" android:color="@color/divider"/>
        </shape>
    </item>
    <item android:state_checked="true" android:state_enabled="true" android:color="@color/white">
        <shape>
             <solid android:color="@color/font_4c86c6"/>
             <corners android:radius="5dp"/>
             <stroke android:width="1dp" android:color="@color/font_4c86c6"/>
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="true" android:color="@color/font_727272">
        <shape>
             <solid android:color="@color/white"/>
             <corners android:radius="5dp"/>
             <stroke android:width="1dp" android:color="@color/font_727272"/>
        </shape>
    </item>
</selector>