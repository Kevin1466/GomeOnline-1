<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseLayout.Clickable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_8" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/space_33"
                    android:layout_height="@dimen/space_33"
                    android:src="@drawable/ic_launcher" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_7" >

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李家志"
                            android:textColor="@color/font_4c86c6"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:id="@+id/a_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问:"
                            android:textColor="@color/font_727272"
                            android:textSize="@dimen/text_size_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/linearLayout2"
                        android:gravity="bottom" >

                        <TextView
                            android:id="@+id/a_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="投资顾问"
                            android:textColor="@color/font_b2b2b2"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_answer"
                        style="@style/BaseButton.Interactive"
                        android:layout_alignParentRight="true"
                        android:focusable="false"
                        android:text="回答" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_13"
                android:layout_marginTop="@dimen/space_13" >

                <TextView
                    android:id="@+id/ask_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_40"
                    android:drawablePadding="@dimen/space_7"
                    android:text="会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金会买是银，会卖是金"
                    android:textColor="@color/font_595959"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/answer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ask_1"
                    android:layout_marginBottom="@dimen/space_13"
                    android:layout_marginTop="@dimen/space_13"
                    android:text="3人回答"
                    android:textColor="@color/font_727272"
                    android:textSize="@dimen/text_size_12" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer_1_lo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:orientation="vertical" >

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_1"
                    android:background="@color/divider_2" />

                <TextView
                    android:id="@+id/nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_13"
                    android:layout_marginTop="@dimen/space_13"
                    android:text="我回答张昭的追问：资金离场都是支持马玉路演了吗？果然都去第三节课拉芳舍"
                    android:textColor="@color/font_727272"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_corner"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_7"
                    android:paddingRight="@dimen/space_7"
                    android:paddingTop="@dimen/space_10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/headpic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ask" />

                        <TextView
                            android:id="@+id/igid_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_7"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="张昭问：明天买什么古柏哦哦赚钱，放松点击发送的第三方斯蒂芬三大普及率"
                            android:textColor="@color/font_727272"
                            android:textSize="@dimen/text_size_15" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/space_13"
                        android:text="3人回答"
                        android:textColor="@color/font_727272"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_13"
                    android:layout_marginTop="@dimen/space_13"
                    android:text="我回答张昭：资金离场都是支持马玉路演了吗？果然都去第三节课拉芳舍"
                    android:textColor="@color/font_727272"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_fensi" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/divider_2" />

</LinearLayout>
